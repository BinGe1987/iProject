<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    view_width="full"
    view_height="full"
    view_orientation="vertical"
    view_background="#ffedeef0">
    <Navigation
        view_background="#ff3c465f">
        
    </Navigation>
    <ScrollView
        view_width="full"
        view_height="full"
        view_orientation="vertical"
        view_scrollIndicator="NO"
        layout_fixTop="YES"
        layout_marginTop="44">
        <FrameLayout
            view_width="full"
            view_height="116sp"
            view_masksToBounds="YES">
            <ImageView
                view_name="image_bg"
                view_width="full"
                view_height="full"
                image_src="@mine_profile_bg"
                image_scaleType="full">
            </ImageView>
            <ImageView
                view_name="image_avatar"
                view_width="52sp"
                view_height="52sp"
                view_borderRadius="26sp"
                view_masksToBounds="YES"
                image_src="@default_user_man"
                layout_gravity="center|top"
                layout_marginTop="10sp">
            </ImageView>
            <Label
                view_name="label_name"
                view_width="auto"
                view_height="auto"
                text_src="135****0000"
                text_color="#ffffff"
                text_size="15sp"
                layout_gravity="center|top"
                layout_marginTop="65sp">
            </Label>
            <Label
                view_name="label_a"
                view_width="auto"
                view_height="auto"
                text_src="我的资产  ¥0.0"
                text_color="#ffffff"
                text_size="13sp"
                layout_gravity="center|top"
                layout_marginTop="90sp">
            </Label>
        </FrameLayout>
        <FrameLayout
            view_width="full"
            view_height="auto">
            <Label
                view_name="label_a"
                view_width="auto"
                view_height="auto"
                text_src="约多多专用付款码"
                text_color="#b89967"
                text_size="14"
                layout_gravity="center|top"
                layout_marginTop="20sp">
            </Label>
            <FrameLayout
                view_width="339sp"
                view_height="364sp"
                layout_marginTop="27sp"
                layout_gravity="center|top"
                view_borderRadius="5sp"
                view_masksToBounds="YES">
                <View
                    view_width="100sp"
                    view_height="14sp"
                    view_background="#ffffff">
                </View>
                <View
                    view_width="100sp"
                    view_height="14sp"
                    view_background="#ffffff"
                    layout_gravity="right|top">
                </View>
                <FrameLayout
                    view_width="339sp"
                    view_height="350sp"
                    layout_marginTop="14sp"
                    view_background="#ffffff">
                    <Label
                        view_name="label_a"
                        view_width="auto"
                        view_height="auto"
                        text_src="核销码：00000000"
                        text_color="#000000"
                        text_size="17"
                        layout_gravity="center|top"
                        layout_marginTop="20sp">
                    </Label>
                    <ImageView
                        view_name="image_code"
                        view_width="226sp"
                        view_height="226sp"
                        view_background="#11000000"
                        layout_marginTop="46sp"
                        layout_gravity="center|top">
                    </ImageView>
                    <Label
                        view_name="label_a"
                        view_width="auto"
                        view_height="auto"
                        text_src="付款码自动刷新"
                        text_color="#117bd1"
                        text_size="14"
                        layout_gravity="center|top"
                        layout_marginTop="283sp">
                    </Label>
                    <FrameLayout
                        view_width="full"
                        view_height="full"
                        layout_marginTop="340"
                        view_background="#00ff00">
                        
                    </FrameLayout>
                </FrameLayout>
                
            </FrameLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>


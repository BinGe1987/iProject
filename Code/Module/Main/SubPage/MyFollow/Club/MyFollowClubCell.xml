<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    view_name="root"
    view_width="full"
    view_height="full"
    view_orientation="horizontal">
    
    <ImageView
        view_name="image"
        view_width="90sp"
        view_height="78sp"
        view_borderRadius="3"
        view_masksToBounds="YES"
        image_scaleType="full"
        layout_gravity="center|left"
        layout_marginLeft="12sp"
        layout_margin="14sp">
    </ImageView>
    <FrameLayout
        view_width="full"
        view_height="full"
        layout_marginTop="14sp"
        layout_marginBottom="14sp"
        layout_marginRight="12sp">
        <Label
            view_name="label_name"
            view_width="auto"
            view_height="auto"
            text_src="会所名字"
            text_color="#2e2e2e"
            text_size="15sp">
        </Label>
        <LinearLayout
            view_width="full"
            view_height="12sp"
            layout_marginTop="25sp"
            view_orientation="horizontal">
            <ImageView
                view_width="auto"
                view_height="full"
                image_src="@star"
                layout_marginRight="5sp">
            </ImageView>
            <Label
                view_name="label_star"
                view_width="auto"
                view_height="full"
                text_src="0.0"
                text_color="#ffb925"
                text_size="12sp"
                layout_marginRight="10sp">
            </Label>
            <Label
                view_name="label_comment_count"
                view_width="auto"
                view_height="full"
                text_src="0条评价"
                text_color="#999999"
                text_size="10sp">
            </Label>
            <FrameLayout
                view_width="full"
                view_height="full">
                <LinearLayout
                    view_width="auto"
                    view_height="full"
                    layout_gravity="right"
                    view_orientation="horizontal">
                    <ImageView
                        view_width="auto"
                        view_height="full"
                        image_src="@location2"
                        layout_marginRight="5sp">
                    </ImageView>
                    <Label
                        view_name="label_address"
                        view_width="auto"
                        view_height="full"
                        text_src="地址"
                        text_color="#999999"
                        text_size="10sp">
                    </Label>
                </LinearLayout>
            </FrameLayout>
            
        </LinearLayout>
        <Label
            view_name="label_tag"
            view_width="auto"
            view_height="auto"
            text_src="-/-/-"
            text_color="#999999"
            text_size="10sp"
            layout_marginTop="42sp">
        </Label>
        <Label
            view_name="label_discount"
            view_width="auto"
            view_height="auto"
            text_src="10折"
            text_color="#ffb925"
            text_size="17sp"
            layout_gravity="left|bottom">
        </Label>
        <Label
            view_name="label_discount_ydd"
            view_width="auto"
            view_height="18sp"
            text_src="升级会员最高享N/A折"
            text_color="#4abdcf"
            text_size="11sp"
            layout_gravity="right|bottom">
        </Label>
    </FrameLayout>
    
</LinearLayout>



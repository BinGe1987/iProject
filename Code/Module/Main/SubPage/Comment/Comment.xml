<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    view_name="root"
    view_width="full"
    view_height="full"
    view_orientation="V"
    view_background="#ffffffff">
    
    <View
        view_width="full"
        view_height="0.5"
        view_background="#19000000"
        layout_fixTop="YES"
        layout_marginTop="44"/>
    
    <LinearLayout
        view_name="layout_cagetory"
        view_width="full"
        view_height="auto"
        view_background="#00f0ffff"
        view_orientation="H"
        layout_margin="5">
        
        <Button
            view_name="button"
            view_width="auto"
            view_height="22sp"
            view_paddingLeft="15"
            view_paddingRight="15"
            view_borderRadius="3"
            view_masksToBounds="YES"
            view_background="#3355b4b2"
            view_backgroundSelected="#FF55b4b2"
            text_color="#FF55b4b2"
            text_colorSelected="#ffffff"
            text_src="Button"
            layout_margin="8"
            view_visibility="invisible"/>
            
    </LinearLayout>
    
    <View
        view_width="full"
        view_height="10"
        view_background="#f0f0f0"/>
    
    <TableView
        view_name="table"
        view_width="full"
        view_height="full"
        view_background="#ffffffff"
        view_masksToBounds="YES"
        view_scrollIndicator="NO"/>
</LinearLayout>


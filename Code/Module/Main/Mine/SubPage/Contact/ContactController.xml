<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_name="root"
    view_width="full"
    view_height="full"
    view_background="#fff0f0f0">
    
    <LinearLayout
        view_width="full"
        view_height="auto"
        layout_fixTop="YES"
        layout_marginTop="60"
        view_orientation="vertical">
        <View
            view_width="full"
            view_height="0.5"
            view_background="#e9eaea">
        </View>
        <FrameLayout
            view_width="full"
            view_height="48sp"
            view_background="#ffffff">
            <Label
                view_width="auto"
                view_height="auto"
                text_src="客服微信"
                text_color="#959595"
                text_size="15sp"
                layout_margin="18sp">
            </Label>
        </FrameLayout>
    
        <View
            view_width="full"
            view_height="0.5"
            view_background="#e9eaea">
        </View>
        <FrameLayout
            view_width="full"
            view_height="48sp"
            view_background="#ffffff">
            <Label
                view_width="auto"
                view_height="auto"
                text_src="WeChat1234"
                text_color="#2e2e2e"
                text_size="15sp"
                layout_margin="18sp">
            </Label>
            <Button
                view_name="btn_wxcopy"
                view_width="66sp"
                view_height="25sp"
                view_background="#55b4b2"
                view_borderRadius="2sp"
                view_masksToBounds="YES"
                text_src="点击复制"
                text_color="#ffffff"
                text_size="12sp"
                layout_gravity="center|right"
                layout_marginRight="18sp">
            </Button>
        </FrameLayout>
        <View
            view_width="full"
            view_height="0.5"
            view_background="#e9eaea">
        </View>
        <FrameLayout
            view_width="full"
            view_height="48sp"
            view_background="#ffffff">
            <Label
                view_width="auto"
                view_height="auto"
                text_src="客服QQ"
                text_color="#959595"
                text_size="15sp"
                layout_margin="18sp">
            </Label>
            
        </FrameLayout>
        <View
            view_width="full"
            view_height="0.5"
            view_background="#e9eaea">
        </View>
        <FrameLayout
            view_width="full"
            view_height="48sp"
            view_background="#ffffff">
            <Label
                view_width="auto"
                view_height="auto"
                text_src="QQ1234"
                text_color="#2e2e2e"
                text_size="15sp"
                layout_margin="18sp">
            </Label>
            <Button
                view_name="btn_qqcopy"
                view_width="66sp"
                view_height="25sp"
                view_background="#55b4b2"
                view_borderRadius="2sp"
                view_masksToBounds="YES"
                text_src="点击复制"
                text_color="#ffffff"
                text_size="12sp"
                layout_gravity="center|right"
                layout_marginRight="18sp">
            </Button>
        </FrameLayout>
        <View
            view_width="full"
            view_height="0.5"
            view_background="#e9eaea">
        </View>
    </LinearLayout>
    
</FrameLayout>



<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_width="full"
    view_height="100"
    view_background="#000ff000">
    
    <Label
        view_name="label_clubName"
        view_width="auto"
        view_height="20"
        text_size="21"
        text_color="#2e2e2e"
        text_src="技师名字"
        layout_margin="16"/>
    
    <Button
        view_width="auto"
        view_height="16"
        view_borderRadius="3"
        view_borderWidth="1"
        view_borderColor="#4abdcf"
        view_padding="10"
        text_src="0人关注"
        text_size="11"
        text_color="#4abdcf"
        layout_margin="16"
        layout_gravity="top|right" />
    
    <ImageView
        view_width="12"
        view_height="12"
        image_src="@star"
        layout_marginLeft="46"
        layout_marginTop="48"/>
    <Label
        view_width="auto"
        view_height="15"
        text_size="12"
        text_color="#ffb925"
        text_src="评分:"
        layout_marginLeft="16"
        layout_marginTop="47"/>
    <Label
        view_width="auto"
        view_height="15"
        text_size="12"
        text_color="#ffb925"
        text_src="5.0"
        layout_marginLeft="62"
        layout_marginTop="47"/>
    
    <!--    地址    -->
    <Label
        view_width="auto"
        view_height="15"
        text_size="13"
        text_color="#2e2e2e"
        text_src="会所地址 距离0公里"
        layout_marginLeft="16"
        layout_marginTop="75"/>
    <ImageView
        view_width="13"
        view_height="13"
        image_src="@arrow2"
        layout_gravity="right|top"
        layout_marginRight="16"
        layout_marginTop="70"/>
    
</FrameLayout>

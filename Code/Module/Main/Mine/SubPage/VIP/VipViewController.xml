<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_name="root"
    view_width="full"
    view_height="full"
    view_background="#f0f0f0">
    <Navigation view_background="#ffffff"/>
    <ScrollView
        view_name="scroll"
        view_width="full"
        view_height="full"
        view_orientation="vertical"
        view_scrollIndicator="NO"
        layout_fixTop="YES"
        layout_marginTop="44">
        <!--        当前等级-->
        <FrameLayout
            view_width="full"
            view_height="160sp"
            view_borderRadius="10sp"
            view_masksToBounds="YES"
            view_background="#1f1f1f"
            layout_marginLeft="18sp"
            layout_marginRight="18sp"
            layout_marginTop="16sp">
            <Label
                view_width="auto"
                view_height="auto"
                text_src="当前会员等级"
                text_color="#9e8254"
                text_size="13sp"
                layout_gravity="center|top"
                layout_marginTop="39sp">
            </Label>
            <Label
                view_width="auto"
                view_height="auto"
                text_src="蒲者"
                text_color="#b89967"
                text_size="20sp"
                layout_marginTop="70sp"
                layout_gravity="center|top">
            </Label>
            <Label
                view_width="auto"
                view_height="auto"
                text_src="剩余VIP天数：0天"
                text_color="#9e8254"
                text_size="13sp"
                layout_marginTop="115sp"
                layout_gravity="center|top">
            </Label>
        </FrameLayout>
        <!--        初级vip-->
        <LinearLayout
            view_orientation="vertical"
            view_width="full"
            view_height="auto"
            view_borderRadius="8sp"
            view_borderWidth="1"
            view_borderColor="#f4d8b6"
            view_masksToBounds="YES"
            view_background="#fffbf6"
            layout_marginLeft="18sp"
            layout_marginRight="18sp"
            layout_marginTop="20sp">
            <Label
                view_width="full"
                view_height="auto"
                text_src="蒲者"
                text_color="#9d8153"
                text_size="13sp"
                text_gravity="center"
                layout_marginTop="16sp">
            </Label>
            
            <LinearLayout
                view_width="full"
                view_height="18sp"
                view_orientation="horizontal"
                layout_marginTop="11sp">
                <Label
                    view_width="40%"
                    view_height="full"
                    text_src="月度VIP会员"
                    text_color="#874c2c"
                    text_size="15sp">
                </Label>
                <Label
                    view_width="20%"
                    view_height="full"
                    text_src="¥98.00"
                    text_color="#808080"
                    text_size="15sp">
                </Label>
                <Label
                    view_width="30%"
                    view_height="full"
                    text_src="¥30.00"
                    text_color="#874c2c"
                    text_size="18sp">
                </Label>
            </LinearLayout>
            
            <LinearLayout
                view_width="full"
                view_height="18sp"
                view_orientation="horizontal"
                layout_marginTop="11sp"
                layout_marginBottom="16sp">
                <Label
                    view_width="40%"
                    view_height="full"
                    text_src="年度VIP会员"
                    text_color="#874c2c"
                    text_size="15sp">
                </Label>
                <Label
                    view_width="20%"
                    view_height="full"
                    text_src="¥980.00"
                    text_color="#808080"
                    text_size="15sp">
                </Label>
                <Label
                    view_width="30%"
                    view_height="full"
                    text_src="¥300.00"
                    text_color="#874c2c"
                    text_size="18sp">
                </Label>
            </LinearLayout>
        </LinearLayout>
        
    </ScrollView>
    
    <FrameLayout
        view_name="bottomBg"
        view_width="full"
        view_height="100sp"
        layout_gravity="bottom"
        layout_marginBottom="-56sp"
        view_background="#c59e5d">
    </FrameLayout>
    <Button
        view_name=""
        view_width="full"
        view_height="44sp"
        text_src="成为VIP"
        text_size="18sp"
        layout_gravity="bottom"
        view_background="#c59e5d"
        text_color="#ffffff" >
    </Button>
    
</FrameLayout>



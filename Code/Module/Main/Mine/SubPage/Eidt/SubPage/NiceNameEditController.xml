<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_name="root"
    view_width="full"
    view_height="full"
    view_background="#fff0f0f0">
    
    <LinearLayout
        view_width="full"
        view_height="auto"
        view_orientation="vertical">
        <InputView
            view_name="input_name"
            view_width="full"
            view_height="48sp"
            view_background="#ffffff"
            view_paddingLeft="20"
            view_paddingRight="20"
            text_placeholder="请输入昵称"
            text_placeholderColor="#9c9c9c"
            text_size="15"
            layout_fixTop="YES"
            layout_marginTop="60">
        </InputView>
        <Label
            view_name="label_tips"
            view_width="auto"
            view_height="auto"
            text_src="1-7个字，支持中文、英文、数字"
            text_color="#9c9c9c"
            text_size="11"
            layout_marginTop="10sp"
            layout_marginLeft="20"
            layout_marginRight="20">
        </Label>
    </LinearLayout>
    
    <Button
        view_name="btn_commit"
        view_width="222sp"
        view_height="40sp"
        text_src="提交"
        text_color="#ffffff"
        text_colorSelected="#ffffff"
        text_size="14sp"
        view_borderRadius="8"
        view_masksToBounds="YES"
        view_background="#55b4b2"
        view_backgroundSelected="#aa55b4b2"
        layout_gravity="center">
    </Button>
    
</FrameLayout>



<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_name="comment_item"
    view_width="full"
    view_height="full"
    view_background="#00ff0fff">
    
    <ImageView
        view_name="headImage"
        view_width="52"
        view_height="52"
        view_borderRadius="26"
        view_masksToBounds="YES"
        image_src="@default_head_girl"
        layout_marginLeft="18"
        layout_marginTop="18"/>
    
    <Label
        view_name="name"
        view_width="auto"
        view_height="auto"
        text_size="15"
        text_color="#2e2e2e"
        text_src="N/A"
        layout_gravity="left|top"
        layout_marginTop="15"
        layout_marginLeft="85" />
    
    <Label
        view_name="time"
        view_width="auto"
        view_height="auto"
        text_size="15"
        text_color="#999999"
        text_src="2019-01-01 00:00:00"
        layout_gravity="right|top"
        layout_marginTop="15"
        layout_marginRight="15" />
    
    <LinearLayout
        view_width="auto"
        view_height="auto"
        view_orientation="H"
        layout_gravity="left|top"
        layout_marginTop="40"
        layout_marginLeft="85">
        <Label
            view_name="tech"
            view_width="auto"
            view_height="auto"
            text_size="12"
            text_color="#ffb925"
            text_src="技师：N/A"
            layout_marginRight="10"/>
        <Label
            view_name="score"
            view_width="auto"
            view_height="auto"
            text_size="12"
            text_color="#ffb925"
            text_src="评分：5.0"/>
    </LinearLayout>
    
    <FrameLayout
        view_width="full"
        view_height="38"
        layout_gravity="left|top"
        layout_marginTop="60"
        layout_marginLeft="85"
        layout_marginRight="15">
        
        <Label
            view_name="content"
            view_width="full"
            view_height="auto"
            text_size="15"
            text_color="#2e2e2e"
            text_src="暂无评论"
            text_gravity="left"/>
        
    </FrameLayout>
    
    
    
    <LinearLayout
        view_name="images"
        view_width="272sp"
        view_height="65sp"
        layout_marginTop="110"
        layout_marginLeft="81"
        view_orientation="H" >
        <FrameLayout
            view_width="65sp"
            view_height="65sp"
            layout_marginLeft="4">
            <ImageView
                view_name="image"
                view_width="65sp"
                view_height="65sp"
                view_masksToBounds="YES"
                image_src="#UIImageDefault"
                image_scaleType="full"/>
            <Button
                view_name="button"
                view_width="65sp"
                view_height="65sp"/>
        </FrameLayout>
        
        <FrameLayout
            view_width="65sp"
            view_height="65sp"
            layout_marginLeft="4">
            <ImageView
                view_name="image"
                view_width="65sp"
                view_height="65sp"
                view_masksToBounds="YES"
                image_src="#UIImageDefault"
                image_scaleType="full"/>
            <Button
                view_name="button"
                view_width="65sp"
                view_height="65sp"/>
        </FrameLayout>
        <FrameLayout
            view_width="65sp"
            view_height="65sp"
            layout_marginLeft="4">
            <ImageView
                view_name="image"
                view_width="65sp"
                view_height="65sp"
                view_masksToBounds="YES"
                image_src="#UIImageDefault"
                image_scaleType="full"/>
            <Button
                view_name="button"
                view_width="65sp"
                view_height="65sp"/>
        </FrameLayout>
        <FrameLayout
            view_width="65sp"
            view_height="65sp"
            layout_marginLeft="4">
            <ImageView
                view_name="image"
                view_width="65sp"
                view_height="65sp"
                view_masksToBounds="YES"
                image_src="#UIImageDefault"
                image_scaleType="full"/>
            <Button
                view_name="button"
                view_width="65sp"
                view_height="65sp"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        view_width="auto"
        view_height="auto"
        layout_gravity="right|bottom"
        layout_marginRight="16"
        layout_marginBottom="20"
        view_orientation="H" >
        <ImageView
            view_width="auto"
            view_height="auto"
            image_src="@icon_like"/>
        <Label
            view_name="like"
            view_width="auto"
            view_height="auto"
            text_size="14"
            text_color="#5f5f5f"
            text_src="0"
            layout_marginLeft="5"/>
        
        <ImageView
            view_width="auto"
            view_height="auto"
            layout_marginLeft="15"
            image_src="@icon_comment"/>
        <Label
            view_name="commentCount2"
            view_width="auto"
            view_height="auto"
            text_size="14"
            text_color="#5f5f5f"
            text_src="0"
            layout_marginLeft="5"/>
    </LinearLayout>
    
    <View
        view_name="line"
        view_width="full"
        view_height="0.5"
        view_background="#19000000"
        layout_marginLeft="85"
        layout_marginRight="15"
        view_visibility="invisible"/>
    
</FrameLayout>

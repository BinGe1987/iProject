<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout
    view_name="root"
    view_width="full"
    view_height="full">
    
    <FrameLayout
        view_name="layout_search"
        view_width="full"
        view_height="28"
        view_borderRadius="14"
        view_borderWidth="0.5"
        view_borderColor="#2e2e2e"
        view_masksToBounds="YES"
        layout_marginLeft="84"
        layout_marginRight="60"
        layout_gravity="center|left">
        <InputView
            view_name="input"
            view_width="full"
            view_height="full"
            text_placeholder="搜索人或角色名"
            text_placeholderColor="#d6d6d6"
            text_size="12"
            text_gravity="left"
            layout_marginLeft="20"
            layout_marginRight="20">
        </InputView>
        <ImageView
            view_name="icon"
            view_width="auto"
            view_height="auto"
            image_src="@icon_search"
            layout_gravity="center|right"
            layout_marginRight="20">
        </ImageView>
        <Button
            view_name="btn_search"
            view_width="full"
            view_height="full">
        </Button>
    </FrameLayout>
    
    <Button
        view_name="btn_cancel"
        view_width="auto"
        view_height="auto"
        view_padding="20"
        text_src="取消"
        text_color="#808080"
        text_size="14"
        layout_gravity="center|right"
        layout_marginRight="-70">
    </Button>
    
</FrameLayout>



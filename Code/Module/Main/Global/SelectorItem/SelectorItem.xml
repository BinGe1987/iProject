<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    view_width="full"
    view_height="full"
    view_background="#ffffff">
    
    <View
        view_width="full"
        view_height="0.5"
        view_background="#e9eaea"
        layout_gravity="top"/>
    
    <Label
        view_name="left_text"
        view_width="auto"
        view_height="auto"
        layout_gravity="center|left"
        layout_marginLeft="17"
        text_size="15"
        text_color="#2e2e2e"
        text_src="左边文本"/>
        
    <LinearLayout
        view_width="auto"
        view_height="full"
        layout_gravity="center|right"
        layout_marginRight="17">
        <ImageView
            view_name="right_image"
            view_width="auto"
            view_height="full"
            view_alpha="0.8"
            layout_marginTop="10"
            layout_marginBottom="10"
            layout_marginLeft="5"/>
        <Label
            view_name="right_text"
            view_width="auto"
            view_height="full"
            text_size="15"
            text_color="#9c9c9c"
            text_src="右边文本"
            layout_marginLeft="5"/>
        <ImageView
            view_name="right_arrow"
            view_width="10"
            view_height="full"
            view_alpha="0.8"
            image_src="@arrow2"
            layout_marginLeft="5"/>
    </LinearLayout>
    
    <View
        view_width="full"
        view_height="0.5"
        view_background="#e9eaea"
        layout_gravity="bottom"/>
        
    <Button
        view_name="button"
        view_width="full"
        view_height="full"
        view_background="#00ffffff"
        view_backgroundSelected="#1f000000"/>
    
</FrameLayout>

